<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="id" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="com.example.todo.HelloController">
    <left>
        <ListView fx:id="smalldetails">

        </ListView>
    </left>
    <center>
        <VBox style="-fx-background-color:white">
            <TextArea fx:id="largedetails" VBox.vgrow="ALWAYS"/>
            <HBox>
                <Label text="DUE : " textFill="saddlebrown">
                    <font>
                        <Font name="Times New Roman bold" size="15"/>
                    </font>
                </Label>
                <Label fx:id="duedate">
                    <font>
                        <Font name="Times New Roman bold" size="15"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </center>
    <top>
        <MenuBar prefHeight="32.0" prefWidth="30" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem text="new" onAction="#showNewDialog"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
